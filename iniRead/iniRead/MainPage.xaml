<Page
    x:Class="iniRead.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iniRead"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="0,0,10,0">
        <TextBlock HorizontalAlignment="Left" Margin="146,79,0,0"  Text="動作モード値" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="390" SelectionChanged="TextBlock_SelectionChanged" FontSize="36"/>
        <RadioButton Content="オンライン" Margin="146,154,0,0" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="-0.007,-1.908"/>
        <RadioButton Content="オフライン" Margin="146,226,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.41,2.827" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="146,293,0,0"  Text="オフラインテストデータパス" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="390" SelectionChanged="TextBlock_SelectionChanged" FontSize="36"/>
        <TextBox HorizontalAlignment="Left" Margin="146,370,0,0" Name="FileNameTextBox" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="273"/>
        <TextBlock HorizontalAlignment="Left" Margin="146,430,0,0"  Text="戻り値格納ファイル" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="390" SelectionChanged="TextBlock_SelectionChanged" FontSize="36"/>
        <TextBox HorizontalAlignment="Left" Margin="220,532,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="273"/>
        <TextBox HorizontalAlignment="Left" Margin="220,603,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="273"/>
        <TextBlock HorizontalAlignment="Left" Margin="146,595,0,0"  Text="R９" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="76" SelectionChanged="TextBlock_SelectionChanged" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Margin="146,516,0,0"  Text="R１" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="72" SelectionChanged="TextBlock_SelectionChanged" FontSize="36"/>
        <Button Content="更新" Click="TextBlock_Updated" Margin="600,79,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.323,0.172" Height="49" Width="111"/>
        <Button Content="取消" Margin="600,156,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.281,0.406" Height="49" Width="111"/>
        <Button Content="参照" Margin="444,370,0,0" Click="TextBlock_SelectionChanged" VerticalAlignment="Top" RenderTransformOrigin="-0.427,0.578"/>
    </Grid>
</Page>
